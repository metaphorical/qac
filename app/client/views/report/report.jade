div.tabs-container
    div.tab-container.js-errors-list.js-tab-container.active
        div.js-holder(data-standard="a")
            each item in errors.a
                include ./item
        div.js-holder(data-standard="aa")
            each item in errors.aa
                include ./item
        div.js-holder(data-standard="aaa")
            each item in errors.aaa
