div.third.tab-head.js-tab-head(data-aim="js-errors-list")
    h3 Errors
    ul.error-filter.js-filter(data-target="errors")
        li.js-trig(data-target="a") A: !{errors.a.length}
        li.js-trig(data-target="aa") AA: !{errors.aa.length}
        li.js-trig(data-target="aaa") AAA: !{errors.aaa.length}
